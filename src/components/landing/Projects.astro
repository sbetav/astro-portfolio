---
import Badge, { type BadgeColors } from "../Badge.astro";

const projects: {
  title: string;
  description: string;
  image: string;
  github: string;
  demo: string;
  technologies: string[];
  badgeColor?: BadgeColors;
}[] = [
  {
    title: "My Links",
    description:
      "Web app that allows you to create custom and minimal landing pages, house any link and social media you would like to share.",
    image: "/my-links.webp",
    demo: "https://vue-my-links.vercel.app/",
    github: "https://github.com/sbetav/vue-my-links",
    technologies: ["Vue", "Tailwind", "Firebase"],
    badgeColor: "green",
  },
  {
    title: "Reading List",
    description:
      "Thecnical test by midudev, built-in features like global state management, filtering, local storage, window persistence, and testing.",
    image: "/reading-list.webp",
    demo: "https://reading-list-ten.vercel.app/",
    github:
      "https://github.com/sbetav/pruebas-tecnicas/tree/main/pruebas/01-reading-list/sbetav",
    technologies: ["Vue", "Tailwind", "Pinia", "Vitest"],
    badgeColor: "yellow",
  },
];
---

<section class="flex flex-col items-center justify-center py-36">
  <div class="flex w-full max-w-2xl flex-col items-center gap-12">
    <h2 class="w-full text-center font-serif text-5xl sm:text-6xl">Projects</h2>
    <div class="flex w-full flex-col gap-20">
      {
        projects.map((project) => (
          <article class="flex w-full flex-col gap-3 overflow-visible">
            <h3 class="text-3xl font-extrabold tracking-tight">
              {project.title}
            </h3>
            <p>{project.description}</p>

            <img
              src={project.image}
              alt={project.title}
              width="672"
              height="504"
              class="z-10 rounded-lg drop-shadow"
            />

            <div class="mt-3 flex flex-col-reverse items-start justify-between gap-4 sm:flex-row">
              <div class="flex gap-3">
                <a
                  href={project.demo}
                  target="_blank"
                  class="flex items-center gap-1 rounded border-[1.5px] border-black bg-white px-4 py-1 font-semibold shadow-[0px_0px_0px_0px_#000] transition-all hover:-translate-x-[2px] hover:-translate-y-[2px] hover:shadow-[5px_5px_0px_0px_#000]"
                >
                  Demo
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="ml-1"
                  >
                    <>
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" x2="21" y1="14" y2="3" />
                    </>
                  </svg>
                </a>
                <a href={project.github} target="_blank" class="github-btn">
                  <span class="svgContainer">
                    <svg fill="white" viewBox="0 0 496 512" height="1.6em">
                      <path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z" />
                    </svg>
                  </span>
                  <span class="BG" />
                  <span class="sr-only">Githun</span>
                </a>
              </div>
              <div class="flex flex-wrap justify-end  gap-1">
                {project.technologies.map((t) => (
                  <Badge label={t} color={project.badgeColor} />
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .github-btn {
    width: 42px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background-color: transparent;
    position: relative;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s;
  }

  .svgContainer {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    backdrop-filter: blur(0px);
    letter-spacing: 0.8px;
    border-radius: 4px;
    transition: all 0.3s;
    border: 1px solid rgba(156, 156, 156, 0.466);
  }

  .BG {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    background: #181818;
    z-index: -1;
    border-radius: 4px;
    pointer-events: none;
    transition: all 0.3s;
  }

  .github-btn:hover .BG {
    transform: rotate(20deg);
    transform-origin: bottom;
  }

  .github-btn:hover .svgContainer {
    background-color: rgba(156, 156, 156, 0.466);
    backdrop-filter: blur(4px);
  }
  
</style>
