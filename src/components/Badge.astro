---
export type BadgeColors = "green" | "blue" | "yellow";
interface Props {
  label: string;
  color?: BadgeColors;
}

const { label, color } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center rounded-md px-2 py-1 text-xs font-medium  ring-1 ring-inset ",
    { "bg-gray-50 text-gray-600  ring-gray-500/10": !color },
    { "bg-green-50 text-green-700 ring-green-600/20": color === "green" },
    { "bg-blue-50 text-blue-700  ring-blue-700/10": color === "blue" },
    { "bg-yellow-50 text-yellow-800  ring-yellow-600/20": color === "yellow" },
  ]}
>
  {label}
</span>
